<% content_for :title, "Novo Contrato" %>

<h1 class="page-title">Novo Contrato</h1>

<%= render "form", contract: @contract %>

<div class="action-links">
  <%= link_to "Voltar", contracts_path, class: "btn-link" %>
</div>

<style>
  /* Estilização do título da página */
  .page-title {
    font-size: 1.8rem;
    font-weight: 600;
    color: #333;
    margin-bottom: 20px;
  }

  /* Links de ação */
  .action-links {
    margin-top: 20px;
  }

  .btn-link {
    display: inline-block;
    padding: 8px 15px;
    font-size: 1rem;
    color: #333;
    background: #f4f4f4;
    text-decoration: none;
    border-radius: 5px;
    transition: background 0.3s ease, color 0.3s ease;
  }

  .btn-link:hover {
    background: #ddd;
    color: #000;
  }
</style>
