<% if notice %>
  <p class="notice-message"><%= notice %></p>
<% end %>

<% content_for :title, "Inscrições" %>

<h1 class="page-title">Inscrições</h1>

<!-- Botão Nova Inscrição -->
<div class="new-subscription">
  <%= link_to "Nova assinatura", new_subscription_path, class: "btn btn-custom" %>
</div>

<!-- Tabela de Inscrições -->
<div class="subscriptions-card">
  <table class="subscriptions-table">
    <thead>
      <tr>
        <th>ID</th>
        <th>Data de Início</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @subscriptions.each do |subscription| %>
        <tr>
          <td><%= subscription.id %></td>
          <td><%= subscription.start_date.strftime("%d/%m/%Y") %></td>
          <td class="subscription-actions">
            <%= link_to subscription_path(subscription), class: "btn-action view-action" do %>
              <i class="bi bi-eye"></i> <!-- Ícone de visualização -->
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<!-- Estilos -->
<style>
  /* Mobile-first styles */
  body {
    font-family: 'Arial', sans-serif;
    background-color: #f7f7f7;
    color: #333;
    margin: 0;
    padding: 0;
  }

  /* Estilo do aviso de mensagem */
  .notice-message {
    color: #007bff;
    font-size: 1rem;
    text-align: center;
    padding: 10px;
    background-color: #e9f3ff;
    border-radius: 5px;
    margin: 15px 0;
  }

  /* Estilo do título */
  .page-title {
    font-size: 1.8rem;
    font-weight: bold;
    color: #333;
    text-align: center;
    margin-bottom: 20px;
  }

  /* Card da Tabela */
  .subscriptions-card {
    background-color: #fff;
    padding: 20px;
    border-radius: 12px;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
    max-width: 100%;
    overflow-x: auto;
  }

  /* Estilo da tabela */
  .subscriptions-table {
    width: 100%;
    border-collapse: collapse;
    table-layout: fixed;
  }

  .subscriptions-table th,
  .subscriptions-table td {
    padding: 12px 15px;
    text-align: left;
    border-bottom: 1px solid #eee;
  }

  .subscriptions-table th {
    background-color: #f1f1f1;
    color: #333;
    font-weight: normal;
  }

  .subscriptions-table td {
    background-color: #fff;
  }

  /* Estilo das ações de inscrição */
  .subscription-actions {
    display: flex;
    justify-content: center;
  }

  /* Estilo dos botões */
  .btn-action {
    font-size: 1rem;
    padding: 8px 15px;
    border-radius: 5px;
    text-decoration: none;
    display: inline-block;
    text-align: center;
    color: #999; /* Texto em cinza claro */
    border: 1px solid transparent;
    transition: color 0.2s ease, transform 0.2s ease, border-color 0.2s ease;
  }

  /* Ações */
  .view-action:hover {
    color: #333; /* Cor escura ao passar o mouse */
    transform: scale(1.05);
    border-color: #ccc; /* Borda sutil ao passar o mouse */
  }

  .view-action i {
    margin-right: 5px;
  }

  /* Estilo para o link do botão "Nova Inscrição" */
  .new-subscription {
    margin-top: 20px;
    text-align: right;
  }

  .btn-custom {
    background-color: transparent;
    color: #007bff;
    font-size: 1rem;
    padding: 10px 20px;
    border-radius: 5px;
    border: 1px solid #007bff;
    text-decoration: none;
    display: inline-block;
    margin-top: 20px;
    text-align: center;
  }

  .btn-custom:hover {
    background-color: #007bff;
    color: white;
  }

  /* Responsividade */
  @media (max-width: 768px) {
    .subscription-actions,
    .new-subscription {
      text-align: center;
    }

    .btn {
      width: 100%;
      text-align: center;
    }

    .subscriptions-table th, .subscriptions-table td {
      font-size: 0.9rem;
      padding: 8px;
    }
  }
</style>
