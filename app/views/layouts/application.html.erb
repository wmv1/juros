  <style>
    /* Estilização do sidebar para desktop */
    @media (min-width: 768px) {
      #sidebarMenu {
        position: fixed;
        top: 0;
        left: 0;
        width: 240px;
        height: 100vh;
        background: #1a1a1a; /* Escuro para mais contraste */
        padding-top: 20px;
        border-right: 1px solid #333; /* Ligeiramente mais claro para contraste */
      }

      #mainContent {
        margin-left: 50%%;
      }

      /* Links do menu lateral */
      .nav-link {
        color: #ddd;
        font-size: 1rem;
        padding: 12px 15px;
        transition: all 0.3s;
        display: flex;
        align-items: center;
      }

      .nav-link i {
        margin-right: 10px;
      }

      /* Hover com mais destaque */
      .nav-link:hover {
        background: #333; /* Fundo escuro mais forte no hover */
        color: #fff;
        border-radius: 5px;
      }
    }

    /* Estilo do menu (mobile e desktop) */
    .offcanvas {
      background: #1a1a1a; /* Fundo escuro */
      color: #f4f4f4; /* Texto claro */
    }

    .offcanvas-title {
      font-weight: 600;
      font-size: 1.2rem;
      color: #fff; /* Cor mais forte para o título */
    }

    /* Links do menu (mobile) */
    .nav-link {
      color: #ddd;
      font-size: 1rem;
      padding: 12px 15px;
      transition: all 0.3s;
      display: flex;
      align-items: center;
    }

    .nav-link i {
      margin-right: 10px;
    }

    /* Hover com mais destaque */
    .nav-link:hover {
      background: #333; /* Fundo escuro mais forte no hover */
      color: #fff;
      border-radius: 5px;
    }

    /* Botão menu mobile */
    .menu-btn {
      background: #333; /* Cor mais escura para o botão */
      color: white;
      border: none;
      padding: 10px 15px;
      font-size: 1.2rem;
      border-radius: 5px;
      transition: 0.3s;
    }

    .menu-btn:hover {
      background: #444; /* Um pouco mais claro no hover */
    }

    /* Botão de fechar corrigido */
    .btn-close-white {
      filter: invert(1); /* Garantir que o ícone de fechar fique branco */
    }

    /* Cor do conteúdo principal */
    #mainContent {
      color: #333; /* Cor escura para o texto */
      background: #f4f4f4; /* Fundo claro para o conteúdo */
      padding: 20px;
      border-radius: 5px;
    }
  </style>
