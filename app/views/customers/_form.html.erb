<%= form_with(model: customer) do |form| %>
  <% if customer.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(customer.errors.count, "error") %> prohibited this customer from being saved:</h2>
      <ul>
        <% customer.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label "Nome", class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label "E-mail", class: "form-label" %>
    <%= form.text_field :email, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label "Telefone", class: "form-label" %>
    <%= form.text_field :phone, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label "Endereço", class: "form-label" %>
    <%= form.text_field :address, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit "Salvar Cliente", class: "btn btn-custom submit-btn" %>
  </div>
<% end %>

<style>
  /* Estilos do formulário */
  .form-group {
    margin-bottom: 20px;
  }

  .form-label {
    font-size: 1.1rem;
    font-weight: 600;
    color: #333; /* Cor escura para rótulos */
    margin-bottom: 5px;
    display: block;
  }

  .form-control {
    width: 100%;
    padding: 10px;
    font-size: 1rem;
    border: 1px solid #ccc;
    border-radius: 5px;
    background-color: #f8f8f8; /* Fundo claro para os campos */
    transition: border-color 0.3s ease;
  }

  .form-control:focus {
    border-color: #333; /* Cor escura ao focar no campo */
    background-color: #fff; /* Fundo branco ao focar */
  }

  /* Estilo para o botão de envio */
  .submit-btn {
    padding: 10px 20px;
    font-size: 1.1rem;
    border-radius: 5px;
    background-color: #333; /* Cor escura para o botão */
    color: white;
    border: none;
    transition: background-color 0.3s ease;
  }

  .submit-btn:hover {
    background-color: #555; /* Cor mais clara no hover */
  }

  /* Estilos para a mensagem de erro */
  .alert-danger {
    background-color: #f8d7da; /* Fundo suave de erro */
    color: #721c24; /* Cor de texto de erro */
    border-radius: 5px;
    padding: 15px;
    margin-bottom: 20px;
  }

  .alert-danger ul {
    list-style-type: none;
    padding-left: 0;
  }

  .alert-danger li {
    margin-bottom: 5px;
  }
</style>
