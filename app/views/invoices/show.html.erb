<% if notice %>
  <p class="notice"><%= notice %></p>
<% end %>

<%= render @invoice %>

<div class="actions">
  <%= link_to "Editar", edit_invoice_path(@invoice), class: "btn" %>
  <%= link_to "Voltar", invoices_path, class: "btn" %>
  <%= button_to "Excluir", @invoice, method: :delete, class: "btn btn-danger", data: { confirm: "Tem certeza?" } %>
</div>

<style>
  .notice {
    color: green;
    text-align: center;
    margin-bottom: 10px;
  }

  .actions {
    display: flex;
    gap: 10px;
    margin-top: 20px;
  }

  .btn {
    background: none;
    border: 1px solid #333;
    padding: 8px 12px;
    text-decoration: none;
    color: #333;
    transition: 0.3s;
  }

  .btn:hover {
    background: #333;
    color: white;
  }

  .btn-danger {
    border-color: #d9534f;
    color: #d9534f;
  }

  .btn-danger:hover {
    background: #d9534f;
    color: white;
  }
</style>
